.form {
  width: 57.5%;
  background: white;
}
.form__list {
  display: flex;
  margin-bottom: 45px;
}
.form__button {
  margin-top: 60px;
  background: $main-color;
  background: linear-gradient(90deg, $main-color 0%, $links-color 100%);
  width: 41%;
  height: 80px;
  border-radius: 40px 5px 40px 5px;
  text-transform: uppercase;
  color: white;
}
