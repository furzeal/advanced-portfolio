.input {
  position: relative;
  margin-right: 55px;
  border-bottom: 1px solid $text-color;
  padding-bottom: 15px;
  &:last-child {
    margin-right: 0;
  }
  .input__label {
    display: none;
  }

  &_active {
    border-bottom: 1px solid $main-color;
    .input__label {
      display: block;
    }
    .input__icon {
      fill: $main-color;
    }
  }
  &_error {
    border-bottom: 1px solid $error-color;
    .input__icon {
      fill: $error-color;
    }
    .input__tooltip {
      display: block;
    }
  }
