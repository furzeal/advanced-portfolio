.tooltip {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  padding: 15px;
  height: 50px;
  width: 350px;
  &_ok {
    background: $ok-color;
  }
  &_warning {
    background: $warning-color;
  }
  &_error {
    background: $error-color;
  }
}

.tooltip__button {
  cursor: pointer;
  fill: currentColor;
  width: 44px;
  height: 44px;
  padding: 14px;
  margin-right: -14px;
  transition: $delay;
  opacity: 0.7;
  &:hover {
    opacity: 1;
  }
}
