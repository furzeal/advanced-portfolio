<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        section.developer
          .container.developer__container
            header.header.developer__header
              .header__logo
                .initials МШ
              .header__menu
                nav.nav
                  ul.nav__list
                    each item in navItems
                      li.nav__item
                        a(href="#").nav__link #{item}
              .header__socials
                ul.socials
                  each icon in icons
                    li.socials__item
                      a.socials__link(href=`${icon.link}` target=`${icon.target}`)
                        +icon(`${icon.icon}`,'socials__icon')
            .developer__content
              .dev-info
                .dev-info__desc Личный сайт разработчика
                h1.dev-info__title #{developerName}
            .developer__button
              .scroll-button Скролл
        section.about
          .container.about__container
            .about__info
              .user
                .avatar.user__avatar
                  +image("content/user.jpg","avatar__img")
                ul.user__list
                  each item in userList
                    li.user__item
                      .user__property #{item.name}
                      .user__value #{item.value}
            .about__desc
              .about__welcome Привет, меня зовут
              h2.about__title #{developerName}      
              .about__text
                p #{jobDescription}   
              .about__ps 
                p #{jobContent}  
      section.skills
        .container.skills__container
          .skills__backpack
            .skills__backpack-wrapper
              +image("content/backpack.png","skills__backpack-img")
          .skills__content
            .skills__section-title
              .section-title
                h2.section-title__text #{skillsTitle}
                .section-title__desc  
                  p #{jobContent}      
            .skills__widget
              ul.skills__list
                each skillGroup, key in skillsList
                  li.skill-group
                    h3.skill-group__title #{key}
                    ul.skill-group__list
                      each value, key in skillGroup
                        li.skill-group__item
                          .skill
                            .skill__title #{key}
                            svg(
                              viewBox="0 0 40 40" 
                              preserveAspectRatio="none" 
                              stroke-alignment="inner").skill__circle.skill__circle_inner
                              circle(cx="20" cy="20" r="16")
                            svg(
                              stroke-dasharray="65 100" 
                              viewBox="0 0 40 40" 
                              preserveAspectRatio="none" 
                              stroke-alignment="inner").skill__circle.skill__circle_outer
                              defs
                                linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="100%")
                                  stop(offset="0%" stop-color="#9300e7") 
                                  stop(offset="100%" stop-color="#4900ed") 
                              circle(cx="20" cy="20" r="16" stroke="url(#gradient)")
          .triangles.skills__triangles
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
              polygon(points="0,0 0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
              polygon(points="0,100 1000,0 1000,100")
      section.works
        .container.works__container
          .works__section-title
            .section-title
              h2.section-title__text Мои работы
          .works__content
            .work
              .work__slider 
                .work__index.text.text_super= 2
                .work__view
                  +image(`${activeWork.image}`, 'work__img')
                  //- h3.work__title #{activeWork.preview}
                  //- .work__text #{activeWork.description}
                  .previews.work__previews
                    ul.previews__list
                      each preview in worksList
                        li.previews__item 
                          +image(`${preview.previewImage}`, 'previews__img')
                  .work__buttons
                    button.work__button.work__button_up вверх
                    button.work__button.work__button_down вниз
              .work__desc
                .tags.work__tags
                  ul.tags__list
                    each tag in activeWork.tags
                      li.tags__item #{tag}
                .section-title__text.work__title #{activeWork.title}
                .work__text.text.text_70-600 #{activeWork.description}
                .work__link
                  a.link(href= `${activeWork.link}`) Посмотреть сайт
                    +icon('link', 'link__img')
      .closing-section
        section.yells
          .container.yells__container
            .yells__slider 
              .double-slider
                .double-slider__header
                  .double-slider__title
                    h2.double-slider__title-text Что обо мне говорят
                  .double-slider__buttons
                    button.double-slider__button.double-slider__button_left влево
                    button.double-slider__button.double-slider__button_right вправо
                .double-slider__content
                  ul.double-slider__list
                    each yell in yellsList
                      li.double-slider__item
                        +icon('quote', 'double-slider__quote')
                        .yell
                          .yell__text #{yell.text}
                          .yell__user
                            .avatar.yell__avatar
                              +image(`${yell.avatar}`,"avatar__img")
                            .yell__user-desc
                              .yell__username #{yell.user}
                              .yell__user-occupation #{yell.occupation}
        section.contacts
        .triangles.yells__triangles
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
            polygon(points="0,0 1000,0 1000,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
            polygon(points="0,0 0,100 1000,0")
        
