<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="https://cdn.jsdelivr.net/npm/vue-scrollto")
    title Portfolio | main page
  body
    .wrapper#app
      .welcome-section#main
        section.developer
          .container.developer__container
            header.header.developer__header
              .header__logo
                .initials.title-text МШ
              .header__menu
                navigation(:sections=`sections`)
              .header__socials
                ul.socials
                  each icon in icons
                    li.socials__item
                      a.socials__link(href=`${icon.link}` target=`${icon.target}`)
                        +icon(`${icon.icon}`,'socials__icon')
              side(:sections=`sections`)
            .developer__content
              .dev-info
                .dev-info__desc.text.text_semi-bold.text_30 #{siteTitle}
                h1.dev-info__title.title-text.title-text_main #{developerName}
            .developer__button
              .scroll-button.text.text_bold(v-scroll-to="{ el: `#${sections[1].id}`, duration: 2000, easing: [0.25, 1, 0.5, 1]}") Скролл
                +icon('scroll', 'scroll-button__img')
        section.about#about
          .container.about__container
            .about__info
              .user
                .avatar.user__avatar
                  +image("content/user.jpg","avatar__img")
                ul.user__list
                  each item in userList
                    li.user__item
                      .user__property.text.text_semi-bold.text_30 #{item.name}
                      .user__value.text.text_semi-bold #{item.value}
            .about__desc
              .about__welcome.text.text_semi-bold.text_50 Привет, меня зовут
              h2.about__title.text.title-text #{developerName}      
              .about__text.text.text_semi-bold.text_50
                p #{jobDescription}   
              .about__ps.text.text_50.text_italic
                p #{jobContent}  
      section.skills#skills
        .container.skills__container
          .skills__backpack
            +image("content/backpack.png","skills__backpack-img")
          .skills__content
            .skills__section-title
              .section-title
                h2.section-title__text.title-text.title-text_small #{skillsTitle}
                .section-title__desc.text.text_semi-bold.text_50 
                  p #{jobContent}      
            .skills__widget
              ul.skills__list
                each skillGroup, key in skillsList
                  li.skill-group
                    h3.skill-group__title.title-text.title-text_sub #{key}
                    ul.skill-group__list
                      each value, key in skillGroup
                        li.skill-group__item
                          .skill
                            .skill__title.text.text_bold.text_50 #{key}
                            svg(
                              viewBox="0 0 36 36" 
                              preserveAspectRatio="none" 
                              stroke-alignment="inner").skill__circle.skill__circle_inner
                              circle(cx="18" cy="18" r="16")
                            svg(
                              stroke-dasharray=`${value}`+" 100" 
                              viewBox="0 0 36 36" 
                              preserveAspectRatio="none" 
                              stroke-alignment="inner").skill__circle.skill__circle_outer
                              defs
                                linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="100%")
                                  stop(offset="0%" stop-color="#9300e7") 
                                  stop(offset="100%" stop-color="#4900ed") 
                              circle(cx="18" cy="18" r="16" stroke="url(#gradient)")
          .triangles.skills__triangles
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
              polygon(points="0,0 0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
              polygon(points="0,100 1000,0 1000,100")
      section.works#works
        .container.works__container
          .works__section-title
            .section-title
              h2.section-title__text.title-text Мои работы
          .works__content
            .work
              .work__slider 
                .work__index.text.text_super= 2
                .work__view
                  +image(`${activeWork.image}`, 'work__img')
                  .work__buttons
                    button.work__button.work__button_up
                      +icon("arrow-down", 'work__button-img work__button-img_up')
                    button.work__button.work__button_down
                      +icon("arrow-down", 'work__button-img work__button-img_down')
                  .previews.work__previews
                    ul.previews__list
                      each preview, index in worksList
                        li.previews__item 
                          - 
                            var previewClass = index !== 1 ? 'previews__img' : 'previews__img previews__img_active';
                          +image(`${preview.previewImage}`, previewClass)
              .work__desc
                .tags.work__tags
                  ul.tags__list
                    each tag in activeWork.tags
                      li.tags__item.text.text_semi-bold.text_70 #{tag}
                .section-title__text.work__title.title-text.title-text_small #{activeWork.title}
                .work__text.text.text_semi-bold.text_70 #{activeWork.description}
                .work__link
                  a.link(href= `${activeWork.link}`) Посмотреть сайт
                    +icon('link', 'link__img')
      .closing-section
        section.yells#yells
          .container.yells__container
            .yells__slider 
              .double-slider
                .double-slider__header
                  .double-slider__title
                    h2.double-slider__title-text.title-text Что обо мне говорят
                  .double-slider__buttons
                    button.double-slider__button.double-slider__button_left 
                      +icon("arrow-down", 'double-slider__button-img double-slider__button-img_left')
                    button.double-slider__button.double-slider__button_right 
                      +icon("arrow-down", 'double-slider__button-img double-slider__button-img_right')
                .double-slider__content
                  ul.double-slider__list
                    each yell in yellsList
                      li.double-slider__item
                        +icon('quote', 'double-slider__quote')
                        .yell
                          .yell__text.text.text_semi-bold.text_50 #{yell.text}
                          .yell__user
                            .avatar.yell__avatar
                              +image(`${yell.avatar}`,"avatar__img")
                            .yell__user-desc
                              .yell__username.text.text_bold #{yell.user}
                              .yell__user-occupation.text.text_semi-bold.text_30 #{yell.occupation}
        section.feedback#feedback
          .container.feedback__container
            .feedback__section-title
              .section-title
                h2.section-title__text.title-text Связаться со мной
            .feedback__content
              form(id="feedback-form").form.feedback__form
                ul.form__list
                  - for(var i = 0; i < feedbackInputs.length-1; i++) 
                    - var inputClass = i !== 1 ? 'input form__item' : 'input input_active input_error form__item';
                      li(class=`${inputClass}`)
                        +icon(`${feedbackInputs[i].icon}`,"input__icon")
                        .input__label.text.text_semi-bold.text_30 #{feedbackInputs[i].tooltip}
                        input(type="text", name=`${feedbackInputs[i].name}`, placeholder=`${feedbackInputs[i].tooltip}`).input__control.text.text_bold
                        .context-tooltip.input__tooltip
                          .context-tooltip__message ошибка
                .input.input_active.input_textarea.form__textarea
                  +icon(`${lastInput.icon}`,"input__icon")
                  .input__label.text.text_semi-bold.text_30 #{lastInput.tooltip}
                  textarea(rows="3" name=`${lastInput.name}`, placeholder=`${lastInput.tooltip}`).input__control.input__control_textarea.text.text_bold
                  .context-tooltip.input__tooltip
                    .context-tooltip__message ошибка
                button(type="submit" form="feedback-form").dialog-button.form__button.text.text_bold отправить
        .triangles.closing-section__triangles
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
            polygon(points="0,0 1000,0 1000,100")
          svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item
            polygon(points="0,0 0,100 1000,0")
      section.temp
        .popup
          .popup__message.text.text_bold Письмо отправлено
          button.dialog-button.popup__button.text.text_bold закрыть
        .tooltip.tooltip_ok Сообщение отправлено
          +icon('remove', 'tooltip__button')
        .tooltip.tooltip_warning Сервер перегружен
          +icon('remove', 'tooltip__button')
        .tooltip.tooltip_error Сообщение не отправлено
          +icon('remove', 'tooltip__button')
      footer.footer
        .container.footer__container
          .footer__left
            .footer__copyright.text.text_copyright.text_15-white &copy 2020
            .footer__initials.text.text_bold #{developerName}
            .footer__title.text.text_30-white #{siteTitle}
          .footer__right
            .footer__menu
              navigation(:sections=`sections`)
            .footer__content
              .footer__socials.text.text_semi-bold.text_30-white
                .sfooter__desc #{footerContent}
                ul.socials.socials_footer
                  each icon in icons
                    li.socials__item
                      a.socials__link.socials__link_footer(href=`${icon.link}` target=`${icon.target}`)
                        +icon(`${icon.icon}`,'socials__icon socials__icon_footer')
              .footer__quote
                .footer__quote-text.text.text_semi-bold.text_30-white #{footerQuote}
                .footer__quote-user.text.text_italic #{footerQuoteAuthor}
    include templates/side.pug
    include templates/nav.pug